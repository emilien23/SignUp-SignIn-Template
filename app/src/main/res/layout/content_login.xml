<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_login">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEmailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/email"
                    android:textColor="@color/textColorGrayTitle"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/shape_rounded_gray_stroke">

                    <EditText
                        android:id="@+id/edUserEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:breakStrategy="simple"
                        android:fontFamily="@font/roboto_medium"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="#555555"
                        android:textSize="14sp" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPasswordText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/password"
                    android:textColor="@color/textColorGrayTitle"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/shape_rounded_gray_stroke">

                    <EditText
                        android:id="@+id/edPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:breakStrategy="simple"
                        android:fontFamily="@font/roboto_medium"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="#555555"
                        android:textSize="14sp" />
                </FrameLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rounded_green_fill"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/SignIn"
                android:textColor="@color/textColorWhite"
                android:textSize="14sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnRouteToRegistration"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_rounded_green_fill"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/create_account"
                android:textColor="@color/textColorWhite"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvErrorLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Логин и пароль введены неправильно"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                tools:visibility="invisible" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>